<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="360dp"
    android:padding="24dp"
    android:background="@drawable/bg_edit_price_dialog">

    <!-- Başlık -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Would You Like To Edit?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category -->
    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category :"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/dialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant"
        android:textColor="@color/edit_text_input"
        android:textSize="18sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/categoryLabel"
        app:layout_constraintStart_toEndOf="@id/categoryLabel" />


    <!-- Price -->
    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price :"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/categoryLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:hint="750"
        android:textColor="@color/edit_price_input"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/priceLabel"
        app:layout_constraintStart_toEndOf="@+id/priceLabel"
        app:layout_constraintTop_toTopOf="@+id/priceLabel"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tv_expense_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense Name : "
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/priceLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp" />

    <EditText
        android:id="@+id/et_expense_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="McDonalds"
        android:textAlignment="center"
        android:textColor="@color/edit_text_input"
        app:layout_constraintBottom_toBottomOf="@+id/tv_expense_name"
        app:layout_constraintStart_toEndOf="@+id/tv_expense_name"
        app:layout_constraintTop_toTopOf="@+id/tv_expense_name"
        android:layout_marginStart="20dp" />

    <ImageButton
        android:id="@+id/imgBtnEditPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_expense_name"
        android:background="@drawable/ic_check_green"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>